{
  "name": "clashlike",
  "version": "1.0.0",
  "description": "A Clash-like proxy management platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.yourname.clashlike",
    "productName": "ClashLike",
    "publish": [
      {
